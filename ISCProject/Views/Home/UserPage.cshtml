                <div class="control">
                    <button type="button" class="btn btn-outline-primary">Edit profile</button>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="images-container">
        <div class="row images-row">
            <div class="col-lg-4 col-sm-12 col-md-12">
                <img class="post-image" src="~/img/1.jpg" />
            </div>
            <div class="col-lg-4 col-sm-12 col-md-12">
