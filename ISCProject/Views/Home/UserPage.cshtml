@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Http;
    <link href="~/css/usercss.css" rel="stylesheet" />
<div class="text-center">
    <div class="row">
        <div class="col-lg-4 col-sm-4">
            <div class="profile-picture ">
